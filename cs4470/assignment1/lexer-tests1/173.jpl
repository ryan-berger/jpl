/* Example 1: This generates a multi-colored gradient */

fn gradient(i : int, j : int, W : int, H : int) : {float,float,float,float} {
  return { \
    float(i + j) / float(W + H), \
    float(i - j + H) / float(W + H), \
    0.0, \
    1.0 \
  }
}

let { W, H } = { 800, 600 }
let gradient_image = array[i : W, j : H] gradient(i, j, W, H)
write image gradient_image to "gradient.png"
